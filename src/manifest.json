{
    "manifest_version": 2,
    "name": "WordPress Translation Filler",
    "version": "0.9.2",
    "description": "Firefox addon to automatically fill translations from Google Cloud Translation API and indicate the accuracy of translation according to locale glossary.",
    "content_security_policy":"script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js https://cdnjs.cloudflare.com/ajax/libs/jquery-csv/0.71/jquery.csv-0.71.min.js https://languagetool.org/*; object-src 'self'",
    "background": {
        "scripts": ["jsstore.js","jsstore.worker.js", "jquery-3.6.0.min.js"]
        },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "permissions": [
        "storage",
		"activeTab",
		"tabs",
        "https://translation.googleapis.com/*",
		"https://translate.wordpress.org/*",
		"https://api.languagetoolplus.com/*"
         ],
        "content_scripts": [
        {
            "js": [
			 "jsstore.js",
			 "jsstore.worker.js",
			 "database.js",
		     "contentScript.js",
			 "googleTranslate.js"
            ],         
            "matches": [
                "https://translate.wordpress.org/*",
                "https://cdnjs.cloudflare.com/*"
            ],
            "css": [
                "translationFillerStyle.css"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{1f70acc7-00c6-4bdf-96a1-c97a19a6884a}",
            "strict_min_version": "57.0"
        }
    }
}