{
  "manifest_version": 3,
  "name": "WordPress Translation Filler",
  "version": "3.4.84",
  "description": "Automatically populate translations by using a selectable API",
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/img/*",
        "*://api-b2b.backenster.com/*",
        "wptf-cute-alert.css",
        "error-alert.flac",
        "clipboard-icon.png",
        "warning-marker.png",
        "/_metadata",
        "wptf-deeplGloss.html",
        "wptf-mark_glossary.js",
        "wptf-options.html",
        "wptf-database.js",
        "wptf-inject.js",
        "wptf-buildstats.js",
        "wptf-cute-alert.js",
        "wptf-glossary.csv",
        "locales/*.json",
        "wptf-tests.json",
        "wptf-testResults.js",
        "wptf-testResults.html",
        "wptf-testRunner.js",
        "Changelog.txt"
      ],
      "matches": [
        "https://translate.wordpress.org/*"
      ]
    }
  ],

  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "1",
        "enabled": true,
        "path": "/wptf-block_rules.json"
      }
    ]
  },
  "host_permissions": [
    "<all_urls>",
    "*://generativelanguage.googleapis.com/*",
    "*://agw.golinguist.com/*",
    "*://translate.wordpress.org/*",
    "*://api-free.deepl.com/*",
    "*://api.deepl.com/*",
    "*://api.deepseek.com/*",
    "*://api.languagetool.com/v2/*",
    "*://api.languagetoolplus.com/v2/*",
    "*://analytics.languagetoolplus.com/*",
    "*://api.cognitive.microsofttranslator.com/*",
    "*://ollama.com/*",
    "*://127.0.0.1/*",
    "*://api.openai.com/*",
    "*://api.anthropic.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "wptf-options.html",
  "content_scripts": [
    {
      "matches": [
        "https://translate.wordpress.org/*"
      ],
      "js": [
        "wptf-functions.js",
        "wptf-LMStudioTrans.js",
        "wptf-NLPCloudTrans.js",
        "wptf-GeminiTrans.js",
        "wptf-lingvanexTrans.js",
        "wptf-ollamaTrans.js",
        "wptf-translatio_io.js",
        "wptf-buildstats.js",
        "wptf-database.js",
        "wptf-inject.js",
        "wptf-deeplGloss.js",
        "wptf-mark_glossary.js",
        "wptf-spellcheck.js",
        "wptf-purify.min.js",
        "wptf-cute-alert.js",
        "wptf-consistency.js",
        "jsstore.js",
        "jsstore.worker.js",
        "wptf-ClaudeTrans.js",
        "wptf-openAITrans.js",
        "wptf-deeplTrans.js",
        "wptf-DeepSeekTrans.js",
        "wptf-LibreTrans.js",
        "wptf-MistralTrans.js",
        "wptf-googleTrans.js",
        "wptf-microsoftTrans.js",
        "wptf-commonTranslate.js",
        "jsdiff.js",
        "wptf-importfile.js",
        "wptf-database-maintenance.js",
        "wptf-populatewithTM.js",
        "wptf-testResults.js",
        "wptf-testRunner.js",
        "contentScript.js"
      ],
      "css": [
        "wptf-cute-alert.css",
        "wptf-style.css"
      ]
    }
  ]
}