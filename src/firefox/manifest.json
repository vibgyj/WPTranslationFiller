{
  "manifest_version": 3,
  "name": "WordPress Translation Filler",
  "version": "1.6.12",
  "description": "Automatically fill translations from APIs and indicate the accuracy of translation according to locale glossary.",
  "web_accessible_resources": [
    {
      "resources": [ "/img/*", "cute-alert.css", "error-alert.flac", "clipboard-icon.png" ],
      "matches": [ "https://translate.wordpress.org/*" ]

    }
  ],
  "background.service_worker": {
    "scripts": [
      "jsstore.js",
      "jsstore.worker.js"
    ]
  },
  "options_ui": {
    "page": "wptf-options.html",
    "browser_style": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://api.deepl.com/*",
    "https://translation.googleapis.com/*",
    "https://translate.wordpress.org/*",
    "https://api.languagetoolplus.com/*",
    "https://api.cognitive.microsofttranslator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://translate.wordpress.org/*"
      ],
      "js": [
        "purify.min.js",
        "cute-alert.js",
        "wptf-functions.js",
        "wptf-consistency.js",
        "jsstore.js",
        "jsstore.worker.js",
        "wptf-database.js",
        "wptf-commonTranslate.js",
        "deeplTranslate.js",
        "microsoftTranslate.js",
        "googleTranslate.js",
        "contentScript.js",
        "jsdiff.js"
      ],
      "css": [
        "cute-alert.css",
        "translationFillerStyle.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{1f70acc7-00c6-4bdf-96a1-c97a19a6884a}",
      "strict_min_version": "57.0"
    }
  }
}