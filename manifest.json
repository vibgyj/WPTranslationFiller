{
    "name": "Wordpress Translation Filler",
    "version": "1.4",
    "description": "Wordpress Translation Filler",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://translate.wordpress.org/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "manifest_version": 2
}